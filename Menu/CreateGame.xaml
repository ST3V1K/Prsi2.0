<UserControl x:Class="Prsi.CreateGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prsi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <StackPanel>
      <Button Name="BtnReturn" VerticalAlignment="Top" HorizontalAlignment="Left" Click="BtnReturn_Click">Zpět</Button>
    </StackPanel>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="20">
      Hra vytvořena
      <LineBreak/>
      Čekání na hráče...
    </TextBlock>
    <Label x:Name="lbName" Style="{StaticResource LabelName}">{PlayerName}</Label>
  </Grid>
</UserControl>
