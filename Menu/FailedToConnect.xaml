<UserControl x:Class="Prsi.FailedToConnect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prsi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock TextAlignment="Center" FontSize="20" Margin="5,5,5,5">
        Nelze se připojit k serveru.
        <LineBreak />
        Zkontrolujte připojení k internetu.
      </TextBlock>
      <Button HorizontalAlignment="Center" FontSize="20" Margin="5,5,5,5" Padding="3,3,3,3" Click="Button_Click">
        Zkusit znovu
      </Button>
    </StackPanel>
  </Grid>
</UserControl>
