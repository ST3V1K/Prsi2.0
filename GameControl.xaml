<UserControl x:Class="Prsi.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prsi"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
  <Grid Height="25" Width="300">
    <Label x:Name="lbHostingPlayerName" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="9pt" Margin="5,1,0,1" Padding="0">● {Hosting Player Name}</Label>
    <Button Name="BtnJoin" HorizontalAlignment="Right" Padding="0" Margin="1" FontSize="9pt" Click="BtnJoin_Click">Připojit</Button>
  </Grid>
</UserControl>
